nextflow_process {

    name "Test Process PAML_CODEML"
    script "../main.nf"
    process "PAML_CODEML"

    tag "modules"
    tag "modules_nfcore"
    tag "paml"
    tag "paml/codeml"

    test("complete config case_a") {

        when {
            process {
                """
                input[0] = [
                    [ id:'caseA' ],
                    file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.phy', checkIfExists: true)
                ]
                input[1] = file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.tree', checkIfExists: true)
                input[2] = file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.ctl', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.out_txt.get(0).get(1)).exists() },
                { assert path(process.out.log.get(0)).exists() },
                { assert path(process.out.versions.get(0)).exists() },
                { assert path(process.out.out_txt.get(0).get(1)).toString().contains("result.txt") },
                { assert path(process.out.log.get(0)).toString().contains("out.log") },
                { assert path(process.out.versions.get(0)).toString().contains("versions.yml") },
                { assert path(process.out.log.get(0)).text.contains("lnL  =") },
                { assert path(process.out.versions.get(0)).text.contains("CODONML") },
                { assert path(process.out.out_txt.get(0).get(1)).text.contains("dN & dS") }
            )
        }

    }

    test("stub test case_a") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'caseA' ],
                    file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.phy', checkIfExists: true)
                ]
                input[1] = file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.tree', checkIfExists: true)
                input[2] = file('https://raw.githubusercontent.com/RiccPicc/test_data/refs/heads/main/case_a.ctl', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert path(process.out.out_txt.get(0).get(1)).exists() },
                { assert path(process.out.log.get(0)).exists() },
                { assert path(process.out.versions.get(0)).exists() },
                { assert path(process.out.out_txt.get(0).get(1)).toString().contains("result.txt") },
                { assert path(process.out.log.get(0)).toString().contains("out.log") },
                { assert path(process.out.versions.get(0)).toString().contains("versions.yml") },
                { assert path(process.out.log.get(0)).text.contains("CODONML in paml version 4.10.7") },
                { assert path(process.out.versions.get(0)).text.contains("4.10.7") }
            )
        }
    }

}
